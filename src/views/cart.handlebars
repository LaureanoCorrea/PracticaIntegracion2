<h1>Contenido del carrito:</h1>

<table id='product_table'>
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Descripci√≥n</th>
			<th>Precio</th>
			<th>Imagen</th>
			<th>Cantidad</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody id='cartBody'>
		{{#each cart}}
			<tr>
				<td>{{this.product.title}}</td>
				<td>{{this.product.description}}</td>
				<td>$ {{this.price}}</td>
				<td><img src='{{this.thumbnail}}' alt='{{this.title}}' /></td>
				<td>{{this.quantity}}</td>
				<td>{{this.product._id}}</td>
			</tr>
		{{/each}}
	</tbody>

</table>

